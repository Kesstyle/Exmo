<configuration scan="true">

    <jmxConfigurator/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>[%-5p] [%d{yyyy:MM:dd HH:mm:ss:SSS}]: %m%n</Pattern>
        </encoder>
    </appender>

    <appender name="TradesAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>D:/devei/INSTALL/logs/exmo/trades.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>D:/devei/INSTALL/logs/exmo/trades.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy:MM:dd HH:mm:ss:SSS} %m%n</pattern>
        </encoder>
    </appender>

    <appender name="UserOrdersAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>D:/devei/INSTALL/logs/exmo/orders.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>D:/devei/INSTALL/logs/exmo/orders.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy:MM:dd HH:mm:ss:SSS} %m%n</pattern>
        </encoder>
    </appender>

    <appender name="TickerAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>D:/devei/INSTALL/logs/exmo/cryptostatistics.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>D:/devei/INSTALL/logs/exmo/cryptostatistics.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%m%n</pattern>
        </encoder>
    </appender>

    <appender name="PotentialTradesAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>D:/devei/INSTALL/logs/exmo/potential_trades.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>D:/devei/INSTALL/logs/exmo/potential_trades.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss:SSS} %m%n</pattern>
        </encoder>
    </appender>

    <appender name="RestAdapterAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>D:/devei/INSTALL/logs/exmo/restcalls.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>D:/devei/INSTALL/logs/exmo/restcalls.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%-5p] %d{yyyy:MM:dd HH:mm:ss:SSS} %m%n</pattern>
        </encoder>
    </appender>

    <appender name="CoinMarketAdapterAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>D:/devei/INSTALL/logs/exmo/coin_market_calls.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>D:/devei/INSTALL/logs/exmo/coin_market_calls.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%-5p] %d{yyyy:MM:dd HH:mm:ss:SSS} %m%n</pattern>
        </encoder>
    </appender>

    <appender name="TradesHistoryAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>D:/devei/INSTALL/logs/exmo/trades_history.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>D:/devei/INSTALL/logs/exmo/trades_history.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss:SSS} %m%n</pattern>
        </encoder>
    </appender>

    <appender name="NonceMonitoringAdapter" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>D:/devei/INSTALL/logs/exmo/nonce.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>D:/devei/INSTALL/logs/exmo/nonce.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss:SSS} %m%n</pattern>
        </encoder>
    </appender>

    <appender name="CommonAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>D:/devei/INSTALL/logs/exmo/server.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>D:/devei/INSTALL/logs/exmo/server.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>[%-5p] %d{yyyy:MM:dd HH:mm:ss:SSS} %c: %m%n</pattern>
        </encoder>
    </appender>

    <logger name="PotentialTrades" level="DEBUG" additivity="false">
        <appender-ref ref="PotentialTradesAppender"/>
    </logger>

    <logger name="Adapter" level="DEBUG" additivity="false">
        <appender-ref ref="RestAdapterAppender"/>
    </logger>

    <logger name="CoinMarketAdapter" level="DEBUG" additivity="false">
        <appender-ref ref="CoinMarketAdapterAppender"/>
    </logger>

    <logger name="UserOrders" level="DEBUG" additivity="false">
        <appender-ref ref="UserOrdersAppender"/>
    </logger>

    <logger name="Ticker" level="DEBUG" additivity="false">
        <appender-ref ref="TickerAppender"/>
    </logger>

    <logger name="Trades" level="DEBUG" additivity="false">
        <appender-ref ref="TradesAppender"/>
    </logger>

    <logger name="TradesHistory" level="DEBUG" additivity="false">
        <appender-ref ref="TradesHistoryAppender"/>
    </logger>

    <logger name="NonceMonitoring" level="DEBUG" additivity="false">
        <appender-ref ref="NonceMonitoringAdapter"/>
    </logger>

    <logger name="by.minsk" level="DEBUG" additivity="false">
        <appender-ref ref="CommonAppender"/>
    </logger>

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>